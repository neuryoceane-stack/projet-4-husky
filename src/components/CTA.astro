---
interface Props {
  title: string;
  text: string;
  buttonText: string;
  buttonLink: string;
  variant?: 'default' | 'alt';
}

const { title, text, buttonText, buttonLink, variant = 'default' } = Astro.props;
const sectionClass = variant === 'alt' ? 'section-alt' : '';
---

<section class={`cta-section ${sectionClass}`}>
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">{title}</h2>
      <p class="cta-text">{text}</p>
      <a href={buttonLink} class="cta-btn">
        {buttonText}
      </a>
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: var(--spacing-xl) 0;
  }
  
  .cta-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }
  
  .cta-title {
    font-family: 'Playfair Display', 'Didot', 'Bodoni', serif;
    font-size: 2.25rem;
    font-weight: 900;
    color: var(--color-blue-night);
    margin-bottom: var(--spacing-md);
    line-height: 1.2;
  }
  
  .cta-text {
    font-family: 'Montserrat', sans-serif;
    font-size: var(--font-size-lg);
    line-height: 1.6;
    margin-bottom: var(--spacing-lg);
    color: var(--color-text-light);
  }

  .cta-btn {
    display: inline-block;
    min-width: 220px;
    padding: 1rem 2rem;
    font-size: var(--font-size-lg);
    font-weight: 600;
    font-family: 'Playfair Display', 'Didot', 'Bodoni', serif;
    color: var(--color-blue-night);
    background-color: transparent;
    border: 2px solid var(--color-blue-night);
    border-radius: 0;
    text-decoration: none;
    text-align: center;
    transition: all var(--transition-base);
  }

  .cta-btn:hover {
    background-color: var(--color-blue-night);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(15, 37, 64, 0.2);
  }

  @media (max-width: 768px) {
    .cta-title {
      font-size: 1.75rem;
    }

    .cta-btn {
      width: 100%;
      min-width: unset;
    }
  }
</style>
