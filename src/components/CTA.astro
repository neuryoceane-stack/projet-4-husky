---
interface Props {
  title: string;
  text: string;
  buttonText: string;
  buttonLink: string;
  variant?: 'default' | 'alt';
}

const { title, text, buttonText, buttonLink, variant = 'default' } = Astro.props;
const sectionClass = variant === 'alt' ? 'section-alt' : '';
---

<section class={`cta-section ${sectionClass}`}>
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">{title}</h2>
      <p class="cta-text">{text}</p>
      <a href={buttonLink} class="btn btn-primary btn-large">
        {buttonText}
      </a>
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: var(--spacing-xl) 0;
  }
  
  .cta-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }
  
  .cta-title {
    margin-bottom: var(--spacing-md);
  }
  
  .cta-text {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-lg);
    color: var(--color-text-light);
  }
</style>
