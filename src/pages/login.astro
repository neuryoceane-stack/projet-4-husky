---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Connexion - Administration Chalet Husky"
  description="Page de connexion pour l'administration du Chalet Husky"
>
  <section class="login-section">
    <div class="container">
      <div class="login-container">
        <div class="login-box">
          <div class="login-header">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
            <h1>Administration</h1>
            <p>Chalet Husky</p>
          </div>
          
          <form id="loginForm" class="login-form">
            <div class="form-group">
              <label for="username">Identifiant</label>
              <input type="text" id="username" name="username" required autocomplete="username" />
            </div>
            
            <div class="form-group">
              <label for="password">Mot de passe</label>
              <input type="password" id="password" name="password" required autocomplete="current-password" />
            </div>
            
            <div id="errorMessage" class="error-message" style="display: none;"></div>
            
            <button type="submit" class="btn btn-primary btn-full">Se connecter</button>
          </form>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  :global(body) {
    font-family: Calibri, 'Gill Sans', 'Gill Sans MT', 'Trebuchet MS', sans-serif;
  }

  .login-section {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xl) 0;
    background: linear-gradient(135deg, var(--color-cream) 0%, var(--color-snow) 100%);
  }

  .login-container {
    width: 100%;
    max-width: 450px;
    margin: 0 auto;
  }

  .login-box {
    background: white;
    border-radius: 16px;
    padding: var(--spacing-xl);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .login-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .login-header svg {
    color: var(--color-blue-night);
    margin-bottom: var(--spacing-md);
  }

  .login-header h1 {
    font-size: 1.6rem;
    font-weight: 900;
    color: var(--color-blue-night);
    margin-bottom: var(--spacing-xs);
  }

  .login-header p {
    color: var(--color-text-light);
    font-size: 0.9rem;
    margin: 0;
  }

  .login-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .form-group label {
    font-weight: 600;
    color: var(--color-blue-night);
    font-size: 0.85rem;
  }

  .form-group input {
    padding: 0.875rem 1rem;
    border: 2px solid var(--color-border);
    border-radius: 8px;
    font-size: 0.9rem;
    transition: border-color var(--transition-base);
    font-family: Calibri, sans-serif;
  }

  .form-group input:focus {
    outline: none;
    border-color: var(--color-sapin);
  }

  .error-message {
    padding: var(--spacing-sm);
    background-color: #fee;
    color: #c33;
    border-radius: 8px;
    font-size: 0.8rem;
    text-align: center;
  }

  .btn-full {
    width: 100%;
    padding: 1rem;
    font-size: 0.95rem;
    margin-top: var(--spacing-sm);
  }

  @media (max-width: 768px) {
    .login-box {
      padding: var(--spacing-lg);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('loginForm') as HTMLFormElement;
    const errorMessage = document.getElementById('errorMessage') as HTMLDivElement;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const username = formData.get('username') as string;
      const password = formData.get('password') as string;

      if (username === 'chalethusky' && password === '190266') {
        // Stocker l'authentification
        sessionStorage.setItem('chalet_admin_auth', 'authenticated');
        sessionStorage.setItem('chalet_admin_time', Date.now().toString());
        
        // Rediriger vers l'admin
        window.location.href = '/admin';
      } else {
        errorMessage.textContent = 'Identifiant ou mot de passe incorrect';
        errorMessage.style.display = 'block';
      }
    });
  });
</script>
