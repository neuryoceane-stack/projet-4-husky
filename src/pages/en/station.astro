<script>
  const snowflake = document.getElementById('scrollSnowflake');
  if (snowflake) {
    window.addEventListener('scroll', () => {
      const scrollPercent = window.scrollY / (document.documentElement.scrollHeight - window.innerHeight);
      const viewportHeight = window.innerHeight;
      const yPos = scrollPercent * (viewportHeight + 150);
      const xSway = Math.sin(window.scrollY / 120) * 25;
      const rotation = window.scrollY / 6;
      snowflake.style.transform = `translate(${xSway}px, ${yPos}px) rotate(${rotation}deg)`;
    });
  }
</script>
