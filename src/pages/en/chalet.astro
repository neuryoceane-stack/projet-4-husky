    font-weight: 900;
    color: var(--color-blue-night);
    text-align: center;
    margin-bottom: var(--spacing-md);
  }

  .chalet-section-text {
    font-size: 1.25rem;
    line-height: 1.8;
    color: var(--color-blue-night);
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .chalet-rooms-gallery {
    margin-top: var(--spacing-lg);
  }

  .chalet-rooms-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-md);
  }

  .chalet-room-item {
    position: relative;
    overflow: hidden;
    border-radius: 16px;
    aspect-ratio: 4 / 3;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .chalet-room-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  .chalet-room-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .chalet-room-item:hover img {
    transform: scale(1.05);
  }

  .chalet-hammam-image {
    margin-top: var(--spacing-lg);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
