<style>
  .chalet-main-title {
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--color-blue-night);
    text-align: center;
    margin-bottom: var(--spacing-lg);
  }

  .chalet-main-text {
    font-size: 1.25rem;
    line-height: 1.8;
    color: var(--color-blue-night);
    text-align: center;
    margin-bottom: 0;
  }

  .chalet-body-text {
    font-family: 'Montserrat', sans-serif;
