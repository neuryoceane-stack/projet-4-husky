<style>
  .chalet-main-title {
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--color-blue-night);
    text-align: center;
    margin-bottom: var(--spacing-lg);
  }

  .chalet-main-text {
    font-size: 1.25rem;
    line-height: 1.8;
    color: var(--color-blue-night);
    text-align: center;
    margin-bottom: 0;
  }

  .chalet-body-text {
    font-family: 'Montserrat', sans-serif;
    font-size: var(--font-size-base) !important;
    line-height: 1.5 !important;
    color: #0F2540 !important;
    font-weight: 400 !important;
  }

  .chalet-section-title {
    font-size: 2rem;
    font-weight: 900;
    color: var(--color-blue-night);
    text-align: center;
    margin-bottom: var(--spacing-md);
  }

  .chalet-section-text {
    font-size: 1.25rem;
    line-height: 1.8;
    color: var(--color-blue-night);
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .chalet-inclus-list {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.0625rem;
    line-height: 2;
    color: var(--color-blue-night);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .chalet-inclus-list li {
    position: relative;
    padding-left: 1.75rem;
    margin-bottom: 0.5rem;
  }

